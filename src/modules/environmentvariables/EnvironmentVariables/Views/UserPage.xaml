        <ListView ItemsSource="{x:Bind ViewModel.Items}"
                  ItemClick="ListView_ItemClick"
                  IsItemClickEnabled="True"
                  SelectedItem="{x:Bind ViewModel.Current, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:EnvVariable">
                    <Grid Background="Transparent" RightTapped="Grid_RightTapped">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="168" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Name="DeleteButton" Text="Delete" Click="DeleteButton_Click"/>
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>

                        <TextBlock Text="{x:Bind Key}" FontSize="13" />
                        <TextBlock Text="{x:Bind Value}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Grid.Column="1" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--<controls:DataGrid Grid.Row="1"
                           ItemsSource="{x:Bind ViewModel.Items, Mode=TwoWay}"
                           SelectedItem="{x:Bind ViewModel.Current, Mode=TwoWay}"
                           AutoGenerateColumns="False" 
                        
                    
                           SelectionMode="Single">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Width="Auto" Header="Key" Binding="{Binding Key, Mode=OneWay}"/>
                <controls:DataGridTextColumn Width="*" Header="Key" Binding="{Binding Value, Mode=OneWay}"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>-->
        
        <Button Margin="16"
                Command="{x:Bind NewDialogCommand, Mode=OneWay}"
                Style="{StaticResource AccentButtonStyle}"
                Height="36"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock FontFamily="Segoe Fluent Icons" VerticalAlignment="Center" Margin="0,0,0,0" Text="&#xECC8;"/>
                <TextBlock Text="Add new variable" />
            </StackPanel>
        </Button>
        
        <ContentDialog x:Name="EditDialog"
                       PrimaryButtonText="Update"
                       PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
                       CloseButtonText="Cancel">
            <StackPanel Width="480"
                        Spacing="32"
                        HorizontalAlignment="Stretch">
                <TextBox Header="Variable name"
                         Text="{Binding Key, Mode=TwoWay}" />
                <TextBox Header="Value"
                         AcceptsReturn="True"
                         Text="{Binding Value, Mode=TwoWay}" />
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:Name="DeleteDialog"
                       Title="Are you sure?"
                       PrimaryButtonText="OK"
                       PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
                       CloseButtonText="Cancel">
            <TextBlock Text="This environment variable will be removed." />
        </ContentDialog>

    </Grid>
</Page>
