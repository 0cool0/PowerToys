<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <ExperimentationLive Condition="'$(ExperimentationLive)' == ''">False</ExperimentationLive>
  </PropertyGroup>

  <ItemGroup Condition="'$(ExperimentationLive)'=='True'">
    <None Remove="Microsoft.VariantAssignment.Client.dll" />
    <None Remove="Microsoft.VariantAssignment.Contract.dll" />
    <ProjectReference Include="..\..\modules\launcher\Wox.Plugin\Wox.Plugin.csproj" />
    <ProjectReference Include="..\..\settings-ui\Settings.UI.Library\Settings.UI.Library.csproj" />
    <ProjectReference Include="..\ManagedTelemetry\Telemetry\ManagedTelemetry.csproj" />
    <PackageReference Include="Microsoft.VariantAssignment.Client" Version="2.4.17140001" />
    <PackageReference Include="Microsoft.VariantAssignment.Contract" Version="3.0.16990001" />
    <Compile Remove="..\..\common\AllExperiments\Experiments_Inert.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(ExperimentationLive)'=='False'">
    <Content Include="Microsoft.VariantAssignment.Contract.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Microsoft.VariantAssignment.Client.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Compile Remove="..\..\common\AllExperiments\Experiments_Live.cs" />
  </ItemGroup>
</Project>
