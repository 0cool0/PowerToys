    <PackageReference Include="System.IO.Abstractions" Version="17.2.3" />
    <PackageReference Include="Microsoft.VariantAssignment.Client" Version="2.4.17140001" />
    <PackageReference Include="Microsoft.VariantAssignment.Contract" Version="3.0.16990001" />
    <Compile Remove="..\..\common\AllExperiments\Experiments_Inert.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsExperimentationLive)'==''">
    <Compile Remove="..\..\common\AllExperiments\Experiments_Live.cs" />
  </ItemGroup>
</Project>
